{
  "name": "fret-flashcards",
  "version": "1.0.0",
  "description": "Guitar Fretboard Flashcard Game",
  "main": "src/dist/index.html",
  "scripts": {
    "test": "mkdir -p test-results && vitest run",
    "e2e": "cypress run --e2e --browser chrome --spec 'cypress/e2e/!(screenshot).cy.js'",
    "cy": "cypress open --e2e --browser chrome",
    "test:e2e": "npm run build && npm run e2e",
    "prettier": "prettier -w .",
    "build": "node build.mjs",
    "watch": "node build.mjs --watch",
    "serve": "npx -y http-server ./dist -c-1",
    "serve:open": "npm run build && ./generate-cert.sh && vite preview --open",
    "screenshot": "npm run build && cypress run --e2e --browser chrome --spec cypress/e2e/screenshot.cy.js"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.33",
    "cypress": "^15.2.0",
    "esbuild": "^0.25.9",
    "esbuild-plugin-tsc": "^0.5.0",
    "jsdom": "^27.0.0",
    "mocha-junit-reporter": "^2.0.0",
    "prettier": "^3.6.2",
    "sirv": "^2.0.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "jquery": "3.7.1",
    "pitchy": "^4.1.0",
    "tslib": "^2.8.1",
    "vexflow": "5.0.0"
  }
}
